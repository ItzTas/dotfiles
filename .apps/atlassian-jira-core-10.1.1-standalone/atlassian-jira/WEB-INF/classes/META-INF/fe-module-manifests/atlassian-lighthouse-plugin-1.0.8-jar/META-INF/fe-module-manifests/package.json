{
  "name": "@atlassian/dc.shared.atlassian-lighthouse.atlassian-lighthouse-frontend",
  "description": "A Node.JS project building web UIs for the Atlassian DC Security monitoring alerts feature.",
  "author": "Atlassian - Cross Product - DC Switch (#dc-switch)",
  "license": "SEE LICENSE IN LICENSE.txt",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://stash.atlassian.com/scm/dcxp/atlassian-lighthouse.git",
    "directory": "zdu-frontend"
  },
  "engines": {
    "node": ">=20.12.0",
    "yarn": "^1.22.22"
  },
  "dependencies": {
    "@atlaskit/avatar": "^21.5.2",
    "@atlaskit/badge": "^16.2.3",
    "@atlaskit/breadcrumbs": "^12.1.1",
    "@atlaskit/checkbox": "^13.5.2",
    "@atlaskit/datetime-picker": "^13.7.5",
    "@atlaskit/dropdown-menu": "^12.10.2",
    "@atlaskit/dynamic-table": "^14.17.1",
    "@atlaskit/empty-state": "^7.8.0",
    "@atlaskit/flag": "^15.7.3",
    "@atlaskit/heading": "^2.4.4",
    "@atlaskit/icon": "^22.3.2",
    "@atlaskit/lozenge": "^11.7.3",
    "@atlaskit/primitives": "^11.1.0",
    "@atlaskit/section-message": "^6.5.10",
    "@atlaskit/select": "^17.11.9",
    "@atlaskit/spinner": "^16.2.0",
    "@atlaskit/textfield": "^6.4.2",
    "@atlaskit/visually-hidden": "^1.4.1",
    "@atlassian/wrm-react-i18n": "^2.0.1",
    "@tanstack/react-query": "^5.29.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@amplitude/node": "^1.10.2",
    "@atlassian/atlas-fe": "^0.3.3",
    "@atlassian/atlas-fe-react": "^0.3.3",
    "@atlassian/atlas-fe-typescript": "^0.3.3",
    "@atlassian/browserslist-config-server": "^0.3.2",
    "@atlassian/clientside-extensions": "^2.4.5",
    "@atlassian/clientside-extensions-webpack-plugin": "^2.4.5",
    "@atlassian/eslint-config-a11y": "^1.1.2",
    "@atlassian/eslint-config-atlas-fe": "^0.3.3",
    "@atlassian/i18n-properties-loader": "^1.0.12",
    "@atlassian/solicitorio": "^3.1.0",
    "@babel/core": "^7.24.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@babel/runtime": "^7.24.8",
    "@tanstack/react-query-devtools": "^5.29.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.5",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "amplitude": "^6.0.0",
    "atlassian-webresource-webpack-plugin": "^6.0.2",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "detect-indent": "^6.1.0",
    "ejs": "^3.1.10",
    "eslint": "^8.57.0",
    "eslint-plugin-formatjs": "^4.13.3",
    "fast-xml-parser": "^4.4.0",
    "file-loader": "^6.2.0",
    "glob": "^10.3.16",
    "gluegun": "^5.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lockfile-lint": "^4.13.2",
    "lodash": "^4.17.21",
    "npm-run-all2": "^6.1.2",
    "prettier": "^2.8.8",
    "semver": "^7.5.1",
    "styled-components": "5.3.11",
    "tapable": "^2.2.1",
    "terser-webpack-plugin": "^5.3.9",
    "ts-node": "^10.9.2",
    "type-fest": "^4.14.0",
    "typescript": "^5.4.2",
    "webpack": "^5.83.1",
    "webpack-chain": "^6.5.1",
    "webpack-dev-server": "^4.15.0",
    "webpack-format-messages": "^3.0.1"
  },
  "scripts": {
    "build": "atlas-fe build -v",
    "type-check": "tsc",
    "build:watch-prepare": "atlas-fe watch-prepare --mode development",
    "start": "atlas-fe start",
    "start:watch": "atlas-fe watch",
    "lint": "npm-run-all2 --parallel lint:fix lint:check:unfixable",
    "lint:check": "npm-run-all2 --parallel lint:check:*",
    "lint:check:fixable": "npm-run-all2 --parallel lint:check:fixable:*",
    "lint:check:unfixable": "npm-run-all2 --parallel lint:check:unfixable:*",
    "lint:fix": "npm-run-all2 --parallel lint:fix:*",
    "lint:fix:es": "npm-run-all2 --sequential lint:fix:es:*",
    "lint:fix:es:eslint": "eslint ./src/frontend --fix",
    "lint:fix:es:prettier": "prettier ./src/frontend --write",
    "lint:check:fixable:es": "npm-run-all2 --parallel lint:check:fixable:es:*",
    "lint:check:fixable:es:eslint": "eslint ./src/frontend",
    "lint:check:fixable:es:prettier": "prettier ./src/frontend --check",
    "lint:check:unfixable:ts": "tsc --noEmit",
    "lint:check:unfixable:licenses": "solicitorio --ignore-versions .",
    "lint:check:unfixable:lockfile": "npm-run-all2 --parallel lint:check:unfixable:lockfile:*",
    "lint:check:unfixable:lockfile:hosts": "lockfile-lint --path yarn.lock --allowed-hosts packages.atlassian.com --validate-https",
    "lint:check:unfixable:lockfile:integrity": "yarn check --integrity",
    "test": "jest",
    "test:fast": "cross-env skip_slow_tests=true jest",
    "test:coverage": "jest --coverage --ci"
  },
  "babel": {
    "plugins": [
      "@atlaskit/tokens/babel-plugin"
    ],
    "presets": [
      "module:@atlassian/atlas-fe/presets/babel",
      "module:@atlassian/atlas-fe-typescript/presets/babel",
      "module:@atlassian/atlas-fe-react/presets/babel"
    ]
  },
  "browserslist": [
    "extends @atlassian/browserslist-config-server"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "@atlassian/eslint-config-atlas-fe/javascript",
      "@atlassian/eslint-config-atlas-fe/react",
      "@atlassian/eslint-config-atlas-fe/prettier"
    ],
    "plugins": [
      "formatjs"
    ],
    "rules": {
      "formatjs/no-literal-string-in-jsx": "error"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "excludedFiles": [
          "src/frontend/types/**/*.d.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      },
      {
        "files": [
          "*.test.ts",
          "*.test.tsx"
        ],
        "rules": {
          "formatjs/no-literal-string-in-jsx": "off"
        }
      },
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "excludedFiles": [
          "*.test.ts",
          "*.test.tsx",
          "src/frontend/types/**/*.d.ts"
        ],
        "extends": [
          "@atlassian/eslint-config-a11y"
        ]
      }
    ],
    "ignorePatterns": [
      "node_modules",
      "target"
    ]
  },
  "prettier": "@atlassian/atlas-fe/presets/prettier",
  "resolutions": {
    "@atlaskit/tokens": "^1.54.1",
    "@typescript-eslint/typescript-estree": "^7.3.1",
    "atlassian-webresource-webpack-plugin": "^6.0.2",
    "babel-loader": "^9.1.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.83.1"
  }
}
