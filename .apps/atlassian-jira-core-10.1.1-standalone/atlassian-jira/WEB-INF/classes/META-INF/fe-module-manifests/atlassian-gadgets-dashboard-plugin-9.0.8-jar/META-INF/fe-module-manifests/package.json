{
  "name": "@atlassian/dc.atlassian-gadgets.dashboard-plugin",
  "private": true,
  "repository": {
    "type": "git",
    "url": "bitbucket.org:atlassian/atlassian-gadgets.git",
    "directory": "dashboard-plugin"
  },
  "scripts": {
    "postinstall": "patch-package",
    "build": "copy-files-from-to"
  },
  "dependencies": {
    "chance": "0.7.3",
    "google-closure-library": "file:src/main/frontend/unhosted/google-closure-library",
    "jquery-ui": "file:src/main/frontend/unhosted/jquery-ui",
    "jquery.cookie": "file:src/main/frontend/unhosted/jquery.cookie",
    "json-js": "file:src/main/frontend/unhosted/json-js"
  },
  "devDependencies": {
    "copy-files-from-to": "^3.9.1",
    "patch-package": "^8.0.0"
  },
  "copyFiles": [
    {
      "from": "node_modules/jquery-ui/ui/jquery.effects.core.js",
      "to": "target/classes/js/lib/effects.js"
    },
    {
      "from": "node_modules/google-closure-library/closure/goog/net/cookies.js",
      "to": "target/classes/js/cookies.js"
    },
    {
      "from": "node_modules/chance/chance.js",
      "to": "target/classes/js/qunit/lib/chance.js"
    },
    {
      "from": "node_modules/jquery.cookie/jquery.cookie.js",
      "to": "target/classes/js/jquery.cookie.js"
    },
    {
      "from": "node_modules/json-js/json2.js",
      "to": "target/classes/js/json.js"
    }
  ],
  "copyFilesSettings": {
    "minifyJs": true
  }
}
