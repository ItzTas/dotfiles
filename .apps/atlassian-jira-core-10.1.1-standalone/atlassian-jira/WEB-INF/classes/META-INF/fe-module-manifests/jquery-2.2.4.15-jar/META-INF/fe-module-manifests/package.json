{
  "name": "atlassian-plugins-jquery",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "repository": "git@bitbucket.org:atlassian/atlassian-plugins-jquery.git",
  "author": "Maciej Rzymski <mrzymski@atlassian.com>",
  "license": "MIT",
  "scripts": {
    "build": "copy-files-from-to && run-s build:patch build:copy",
    "build:patch": "patch-package",
    "build:copy": "node ./scripts/copy-files.js",
    "//delink-jquery-browser": "npm creates a symlink, but we want patch-package to leave the src folder alone",
    "delink-jquery-browser": "rm -rf node_modules/jquery.browser && cp -r src/main/frontend/jquery.browser node_modules/jquery.browser",
    "minify": "for file in `find target/classes -type f -name \"*.js\" ! -name \"*min.js\"`; do uglifyjs --compress --mangle --comments /^!/ -o \"${file%.js}-min.js\" -- \"$file\" ; done",
    "postinstall": "npm run delink-jquery-browser && patch-package",
    "prepare": "husky install",
    "test": "jest"
  },
  "engines": {
    "node": ">=14.16.0"
  },
  "dependencies": {
    "jquery": "2.2.4",
    "jquery-migrate": "1.4.1",
    "jquery.browser": "file:src/main/frontend/jquery.browser"
  },
  "devDependencies": {
    "chalk": "4.1.2",
    "copy-files-from-to": "^3.9.1",
    "husky": "^5.1.3",
    "jest": "27.0.6",
    "jsdom": "^16.6.0",
    "mkdirp": "^1.0.4",
    "npm-run-all2": "5.0.0",
    "patch-package": "6.4.7",
    "uglify-js": "3.7.7"
  },
  "copyFiles": [
    {
      "from": "node_modules/jquery.browser/jquery.browser.js",
      "to": "target/classes/plugins/jquery.browser.js"
    }
  ]
}
