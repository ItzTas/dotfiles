{
  "name": "@atlassian/dc.shared.upm-server.universal-plugin-manager-plugin",
  "author": "Atlassian",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://stash.atlassian.com/scm/ecoserver/upm-server.git",
    "directory": "atlassian-universal-plugin-manager-plugin"
  },
  "scripts": {
    "delink-caja-html-sanitizer": "rm -rf node_modules/caja-html-sanitizer && cp -r unhosted-deps/caja-html-sanitizer node_modules/",
    "postinstall": "npm run delink-caja-html-sanitizer && patch-package --error-on-fail --error-on-warn",
    "build": "copy-files-from-to"
  },
  "dependencies": {
    "almond": "0.2.5",
    "backbone": "1.0.0",
    "backbone-brace": "file:unhosted-deps/backbone-brace",
    "backbone-query-parameters": "file:unhosted-deps/backbone-query-parameters",
    "caja-html-sanitizer": "file:unhosted-deps/caja-html-sanitizer",
    "fancybox": "2.1.5",
    "jquery-hashchange": "1.3.0",
    "jquery.cookie": "file:unhosted-deps/jquery-cookie",
    "underscore": "1.13.4"
  },
  "devDependencies": {
    "copy-files-from-to": "3.11.0",
    "patch-package": "8.0.0"
  },
  "copyFiles": [
    {
      "from": "node_modules/almond/almond.js",
      "to": "target/classes/js/lib/almond.js"
    },
    {
      "from": "node_modules/almond/almond.js",
      "to": {
        "default": {
          "dest": "target/classes/js/lib/almond-min.js",
          "minifyJs": true
        }
      }
    },
    {
      "from": "node_modules/backbone/backbone.js",
      "to": "target/classes/js/lib/backbone.js"
    },
    {
      "from": "node_modules/backbone/backbone.js",
      "to": {
        "default": {
          "dest": "target/classes/js/lib/backbone-min.js",
          "minifyJs": true
        }
      }
    },
    {
      "from": "node_modules/backbone-brace/backbone.brace.js",
      "to": "target/classes/js/lib/backbone.brace.js"
    },
    {
      "from": "node_modules/backbone-brace/backbone.brace.js",
      "to": {
        "default": {
          "dest": "target/classes/js/lib/backbone.brace-min.js",
          "minifyJs": true
        }
      }
    },
    {
      "from": "node_modules/caja-html-sanitizer/html-sanitizer.js",
      "to": "target/classes/js/base/util/UpmHtmlSanitizer.js"
    },
    {
      "from": "node_modules/caja-html-sanitizer/html-sanitizer.js",
      "to": {
        "default": {
          "dest": "target/classes/js/base/util/UpmHtmlSanitizer-min.js",
          "minifyJs": true
        }
      }
    },
    {
      "from": "node_modules/backbone-query-parameters/backbone.queryparams.js",
      "to": "target/classes/js/lib/backbone.queryparams.js"
    },
    {
      "from": "node_modules/backbone-query-parameters/backbone.queryparams.js",
      "to": {
        "default": {
          "dest": "target/classes/js/lib/backbone.queryparams-min.js",
          "minifyJs": true
        }
      }
    },
    {
      "from": "node_modules/jquery.cookie/jquery.cookie.js",
      "to": "target/classes/js/lib/jquery.cookie.js"
    },
    {
      "from": "node_modules/jquery.cookie/jquery.cookie.js",
      "to": {
        "default": {
          "dest": "target/classes/js/lib/jquery.cookie-min.js",
          "minifyJs": true
        }
      }
    },
    {
      "from": "node_modules/fancybox/dist/js/jquery.fancybox.js",
      "to": "target/classes/js/lib/jquery.fancybox.js"
    },
    {
      "from": "node_modules/fancybox/dist/js/jquery.fancybox.js",
      "to": {
        "default": {
          "dest": "target/classes/js/lib/jquery.fancybox-min.js",
          "minifyJs": true
        }
      }
    },
    {
      "from": "node_modules/fancybox/dist/css/jquery.fancybox.css",
      "to": "target/classes/css/jquery.fancybox.css"
    },
    {
      "from": "node_modules/jquery-hashchange/jquery.ba-hashchange.js",
      "to": "target/classes/js/jquery.hashchange.js"
    },
    {
      "from": "node_modules/jquery-hashchange/jquery.ba-hashchange.js",
      "to": {
        "default": {
          "dest": "target/classes/js/jquery.hashchange-min.js",
          "minifyJs": true
        }
      }
    },
    {
      "from": "node_modules/underscore/underscore.js",
      "to": "target/classes/js/lib/underscore.js"
    },
    {
      "from": "node_modules/underscore/underscore.js",
      "to": {
        "default": {
          "dest": "target/classes/js/lib/underscore-min.js",
          "minifyJs": true
        }
      }
    }
  ],
  "copyFilesSettings": {
    "whenFileExists": "notify-about-available-change",
    "minifyJsTerserOptions": {
      "format": {
        "comments": false
      }
    }
  }
}
