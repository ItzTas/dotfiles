y() {
	set -e

	pacman -Qqe >"$HOME"/.pacmanlist

	yay -Qqe >"$HOME"/.yaylist

	rm "$HOME"/.Brewfile

	brew bundle dump --file="$HOME"/.Brewfile

	yadm add "$HOME"/.pacmanlist

	yadm add "$HOME"/.yaylist

	yadm add "$HOME"/.Brewfile

    yadm --no-pager diff

	yadm commit -am 'updates'

	yadm push
}

y
