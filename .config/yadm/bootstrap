#!/bin/bash

BOOTSTRAP_D="$HOME/.config/yadm/bootstrap.x.d"

if [[ ! -d "$BOOTSTRAP_D" ]]; then
    echo "Error: bootstrap directory '$BOOTSTRAP_D' not found" >&2
    exit 1
fi

for script in "$BOOTSTRAP_D"/*.sh; do
    if [[ -f "$script" ]]; then
        chmod +x "$script"
    fi
done

scripts=(
    "install_packages"
    "enables"
    "grub_theme"
    "clone_nvim"
    "create_dirs"
    "set_up_docker"
    "source_tmux_conf"
)

for script in "${scripts[@]}"; do
    if [[ -f "$BOOTSTRAP_D/$script.sh" ]]; then
        echo "Executing: $script"
        "$BOOTSTRAP_D/$script.sh" || true
    else
        echo "Warning: Script '$script' not found in $BOOTSTRAP_D" >&2
    fi
done

for script in "$BOOTSTRAP_D"/set_up_*; do
    if [[ -f "$script" ]]; then
        echo "Executing: $(basename "$script")"
        "$script" || true
    else
        echo "Warning: Script '$script' not found in $BOOTSTRAP_D" >&2
    fi
done
