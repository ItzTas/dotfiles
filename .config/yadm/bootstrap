#!/bin/bash

BOOTSTRAP_D="$HOME/.config/yadm/bootstrap.x.d"

if [[ ! -d "$BOOTSTRAP_D" ]]; then
    echo "Error: bootstrap directory '$BOOTSTRAP_D' not found" >&2
    exit 1
fi

chmod +x "$BOOTSTRAP_D/install_packages.sh"
chmod +x "$BOOTSTRAP_D/enables.sh"
chmod +x "$BOOTSTRAP_D/grub_theme.sh"
chmod +x "$BOOTSTRAP_D/clone_nvim.sh"
chmod +x "$BOOTSTRAP_D/create_dirs.sh"
chmod +x "$BOOTSTRAP_D/set_up_docker.sh"
chmod +x "$BOOTSTRAP_D/source_tmux_conf.sh"
chmod +x "$BOOTSTRAP_D/set_up_sddm.sh"
chmod +x "$BOOTSTRAP_D/remove_icons.sh"
chmod +x "$BOOTSTRAP_D/set_up_git.sh"

"$BOOTSTRAP_D/install_packages.sh" || true
"$BOOTSTRAP_D/enables.sh" || true
"$BOOTSTRAP_D/grub_theme.sh" || true
"$BOOTSTRAP_D/clone_nvim.sh" || true
"$BOOTSTRAP_D/create_dirs.sh" || true
"$BOOTSTRAP_D/set_up_docker.sh" || true
"$BOOTSTRAP_D/source_tmux_conf.sh" || true
"$BOOTSTRAP_D/set_up_sddm.sh" || true
"$BOOTSTRAP_D/remove_icons.sh" || true
"$BOOTSTRAP_D/set_up_git.sh" || true
